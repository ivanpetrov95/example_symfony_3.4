{% extends 'base.html.twig' %}

{% block body %}
    <table border="1">
        <thead>
            <tr>
                <th>Username:</th>
                <th>User's email:</th>
                <th>Details:</th>
            </tr>
        </thead>
        {% for user in allUsers %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td><a type="button" class="btn btn-outline-primary" href="{{ path("user_profile", {"id": user.id}) }}">open</a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}

