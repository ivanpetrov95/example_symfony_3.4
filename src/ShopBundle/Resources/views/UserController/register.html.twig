{% extends "base.html.twig" %}

{% block body %}
    <div class="card auth-container"  id="login-registration">
        <div class="card-body">
            <form action="{{ path('register') }}" method="post">
                <div class="form-outline">
                    <input type="email" id="emailId" class="form-control" name="shopbundle_user[email]" required/>
                    <label class="form-label" for="emailId">Email:</label>
                </div>
                <br/>
                <div class="form-outline">
                    <input type="text" id="usernameId" class="form-control" name="shopbundle_user[username]" required/>
                    <label class="form-label" for="usernameId">Username:</label>
                </div>
                <br/>
                <div class="form-outline">
                    <input type="password" id="passId" class="form-control" name="shopbundle_user[password][first]" required/>
                    <label for="passId" class="form-label">Password:</label>
                </div>
                <div class="progress" id="progress-bar-wrap-id" hidden="true">
                    <div id="progress-bar-id"
                         class="progress-bar custom-progress-bar"
                         role="progressbar"
                         style="width: 1%;"
                         aria-valuenow="1"
                         aria-valuemin="0"
                         aria-valuemax="100"
                    ></div>
                </div>
                <div class="form-text">
                    <ul id="passwordHintTextList" hidden="true">
                        <li class="password-hint-child">Password must be 8-20 characters.</li>
                        <li class="password-hint-child">Password must contain at least one special character.</li>
                    </ul>
                </div>
                <br/>
                <div class="form-outline">
                    <input type="password" id="passSecId" class="form-control"
                           name="shopbundle_user[password][second]" required/>
                    <label for="passSecId" class="form-label"> Confirm password:</label>
                </div>
                <div class="form-text">
                    <ul id="passwordHintConfirmTextList" hidden="true">
                        <li class="password-hint-child">Passwords must match.</li>
                    </ul>
                </div>
                <br/>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token("authenticate") }}"/>
                <input type="submit" class="btn btn-outline-primary" name="submit" value="Sign Up"/>
            </form>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset("js/designScript.js") }}"></script>
    <script src="{{ asset('js/homepageScript.js') }}"></script>
{% endblock %}